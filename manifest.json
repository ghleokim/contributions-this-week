{
    "name": "Contribution This Week",
    "version": "1.0",
    "description": "Count user's contributions this week!",
    "permissions": [
        "tabs",
        "activeTab",
        "https://lab.ssafy.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://lab.ssafy.com/*"
            ],
            "css": [
                "ctw.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "ctw-16.png",
        "32": "ctw-32.png",
        "48": "ctw-48.png",
        "64": "ctw-64.png",
        "128": "ctw-128.png"
    },
    "manifest_version": 2
}